<!DOCTYPE html>
<html>
  <head>
    <title>VideoRoom2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-fixed-top navbar-inverse-brand-hover-color">
      <div class="container">
        <%= link_to "Sync Room", root_path, id: "logo" %>
          <nav>
            <ul class="nav navbar-nav navbar-right">
              <li><%= link_to "Home",    root_path %></li>
              <% if logged_in? %>
                <% if current_user.room_id != nil %>
                  <li><%= link_to "My Room", video_room_path(current_user.room_id) %></li>
                  <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                      Account <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">
                      <li><%= link_to "Profile", current_user %></li>
                      <li><%= link_to "Settings", edit_user_path %></li>
                      <li class="divider"></li>
                      <li>
                        <%= link_to "Log out", logout_path, method: :delete %>
                      </li>
                    </ul>
                  </li>
                <% else %>
                  <li><%= link_to "My Room", new_room_path %></li>
                  <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                      Account <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">
                      <li><%= link_to "Profile", current_user %></li>
                      <li><%= link_to "Settings", edit_user_path %></li>
                      <li class="divider"></li>
                      <li>
                        <%= link_to "Log out", logout_path, method: :delete %>
                      </li>
                    </ul>
                  </li>
                <% end %>  
              <% else %>
                <li><%= link_to "Log in", login_path %></li>
              <% end %>              
            </ul>
            <form class="navbar-form navbar-right ">
              <div class="input-group">
                <input type="text" class="form-control" placeholder="Find a room">
                <div class="input-group-btn">
                  <button class="btn btn-default" type="submit">
                    <i class="glyphicon glyphicon-search"></i>
                  </button>
                </div>
              </div>
            </form>
          </nav>
      </div>
    </header>
    <div class="container">
      <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>      
    <%= yield %>
    </div>
  </body>
</html>
