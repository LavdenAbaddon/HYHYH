<% provide(:title, "Sync Room | My Profile") %>
<div class="container">
	<img src=<%= @user.avatar %>
	<%= form_for @user, :html => {:class => "form-horizontal"} do |f| %>
		<div class="form-group">
			<label for="Title" class="col-sm-2 control-label">Username</label>

			<div class="col-sm-4">
				<input type="text" class="form-control" name="username" value="<%= @user.username %>" readonly>
			</div>
		</div>

		<div class="form-group">
			<label class="col-sm-2 control-label">Avatar</label>
			<div class="col-sm-4">
				<input type="text" name="avatar" class="form-control" value="<%= @user.avatar %>">
			</div>
		</div>

		<div class="form-group">
			<label class="col-sm-2 control-label">Password</label>
			<div class="col-sm-4">
				<input type="password" name="orginalpassword" class="form-control" placeholder="Orginal Password" required autofocus>
			</div>
		</div>

		<div class="form-group">
			<label class="col-sm-2 control-label">Changed Password</label>
			<div class="col-sm-4">
				<input type="password" name="password1" class="form-control" placeholder="No required if you don't chagne password">
			</div>
		</div>

		<div class="form-group">
			<label class="col-sm-2 control-label">Confirm Password</label>
			<div class="col-sm-4">
				<input type="password" name="password2" class="form-control" placeholder="No required if you don't chagne password">
			</div>
		</div>

		<div class="form-group">
			<label class="col-sm-2 control-label">Email</label>
			<div class="col-sm-4">
				<input type="email" name="email" id="inputEmail" class="form-control" value="<%= @user.email %>" required>
			</div>
		</div>

		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<button class="btn btn-primary" type="submit">Save</button>
			</div>
		</div>
	<% end %>
</div> <!-- /container -->
